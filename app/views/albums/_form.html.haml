= simple_form_for @album do |f|
  - if @album.errors.any?
    #error_explanation
      %h2= "#{pluralize(@album.errors.count, "error")} prohibited this album from being saved:"
      %ul
        - @album.errors.full_messages.each do |msg|
          %li= msg

  .field
    =f.simple_fields_for Artist.new do |ff|
      =ff.input :name, label: "Artist Name"  #need to create the artist object if it doesn't already exist. Do search among user's artist objects
    =f.input :name, label: "Album Name"

  .actions
    = f.button :submit, 'Save'
