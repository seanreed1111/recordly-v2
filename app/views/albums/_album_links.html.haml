=link_to 'Show Album', album_path(album)
=link_to 'Edit Album', edit_album_path(album)
=link_to 'Add Songs', new_album_song_path(album)
-if(@user.favorite?(album))
  =link_to 'Remove From Favorites', album_favorite_path(album,Favorite.favorite_id(@user, album)), method: :delete, id:"remove-from-favorites"
-else
  =link_to 'Add Album to Favorites', album_favorites_path(album), method: :post, id:"link-to-favorites"
= link_to 'Delete Album', album, :method => :delete, :data => { :confirm => 'Are you sure? This will also delete associated songs..' }, remote: true
